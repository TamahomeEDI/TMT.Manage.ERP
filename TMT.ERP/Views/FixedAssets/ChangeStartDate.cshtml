@{
    ViewBag.Title = "ChangeStartDate";
}

<script type="text/ecmascript">
    $(document).ready(function () {

        $('#btnCancel').click(function (e) {
            window.location.href = "/FixedAssets/Depreciation/";
        });

        $('#btnSave').click(function (e) {
            e.preventDefault();
            
            var year = $('#Year').val();
            $.ajax(
                {
                    type: 'GET',
                    tradition: true,
                    url: "/FixedAssets/SetYear/",
                    data: { "year": year },
                    success: function (data) {
                        window.location.href = "/FixedAssets/Depreciation/";
                    }
                });
        });
    });
</script>

<input type="hidden" id="hidYear" value="@ViewBag.CurrentYear"/>
<div class="container" style="background: #f7f7f7; color: #252525; font-size: 14px;">
    <div id="con_top">
        <div class="c_container">
            <h3>@Resources.Resource.FixedAsset_Depreciation_Title</h3>
            <div id="breadcrumbs">
                <ul>
                    <li><span>Accounting</span></li>
                    <li><a href="/FixedAssets/Depreciation">@Resources.Resource.FixedAsset_Depreciation_Title</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div id="con_body">
    <div class="container">
        <div class="c_container">
            <div id="form_body">
                <div style="border: 1px solid darkgrey; border-radius: 6px; background-color: #E8F1FF; margin-top: 10px; height: 150px; margin-bottom: 10px;">
                    <div style="margin-left: 10px; margin-top: 10px;">
                        <label style="font-size: 15px;">Current Start date is 1 Jan @ViewBag.CurrentYear</label>
                        <hr style="margin-top: 10px; margin-bottom: 10px;" />
                        <p>The start date for managing your fixed assets will be the 1st of the first month in your financial year.</p>
                        <p>New start date</p>
                        <select id="Year">
                            <option value="@ViewBag.Year">1 Jan @ViewBag.Year</option>
                            <option value="@ViewBag.NextYear">1 Jan @ViewBag.NextYear</option>
                        </select>
                        <input id="btnSave" type="button" class="btn btn-defaultxero" value="@Resources.Resource.FixedAsset_Update" />
                        <input id="btnCancel" type="button" class="btn btn-defaultxero" value="@Resources.Resource.FixedAsset_Cancel" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

